<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="success_view.xsl"?>
<view>
    <header>
        <title>a viewer in MVC</title>
     </header>
     <body>
        <form>
            <name>logoutForm</name>
            <action>logout.action</action>
            <method>post</method>
            <textView>
              <name>userName</name>
              <label>Login name:</label>
              <value>Water</value>
              </textView>
              <ageView>
              <name>userName</name>
              <label>Age</label>
              <value>30</value>
              </ageView>
              <buttonView>
              <name>logoutButton</name>
              <label>Logout</label>
              </buttonView>
           </form>
       </body>
</view>